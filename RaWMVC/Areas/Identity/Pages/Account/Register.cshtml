@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="authentication_container">
    <div class="container_authentication right-panel-active" id="container">
        <div class="form-container sign-up-container">
            <form class="form_authentication" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h1 class="title_authentication">Create Account</h1>
                <div class="social-container">
                    <a href="#" class="social link_authentication">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                    <a href="#" class="social link_authentication">
                        <i class="fab fa-google-plus-g"></i>
                    </a>
                    <a href="#" class="social link_authentication">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                </div>
                <span class="option_authentication">you can also register using a username.</span>
                @*** Input Username ***@
                <input asp-for="Input.UserName" class="inp_authentication" autocomplete="username" aria-required="true" placeholder="Username_123" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>

                @*** Input Password ***@
                <input asp-for="Input.Password" class="inp_authentication" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <input asp-for="Input.ConfirmPassword" class="inp_authentication" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                @*** Button Form ***@
                @* <button id="registerSubmit" type="submit" class="btn_authentication">Sign Up</button> *@
                <button id="registerSubmit" type="submit" class="btn_authentication">Register</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1 class="title_authentication">
                        Welcome to our RaW community!
                    </h1>
                    <img class="img_authentication"
                         src="~/assets/img/bg_authentication.png"
                         alt="" />
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="ghost link_signup" id="signIn">Sign In</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

