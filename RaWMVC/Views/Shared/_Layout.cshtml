<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Link CSS -->
    <link rel="stylesheet" href="~/assets/css/main.css" />
    <link rel="stylesheet" href="~/assets/css/tablet.css" />
    <link rel="stylesheet" href="~/assets/css/mobile.css" />
    <!-- Boostrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous" />
    <!-- Font Awesome CSS -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />
    <title>RaW - Read and Write story free</title>
</head>
<body>
    <header>
        <nav class="navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <a class="navbar-brand d-flex" href="#">
                            <img src="~/assets/img/logo.png" alt="" />
                            <p class="fs-3 text">RaW</p>
                        </a>
                    </div>
                    <div class="col-4 search_container">
                        <form class="d-flex">
                            <input class="form-control me-2 search_input"
                                   type="search"
                                   placeholder="Search"
                                   aria-label="Search" />
                            <button class="btn btn_search" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </form>
                    </div>
                    <div class="col links_container">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 list_links">
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Tag" asp-action="Index">Tag</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link"
                                        href="#"
                                       tabindex="-1"
                                       aria-disabled="true">About us</a>
                                </li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li class="dropdown dropdown-user nav-item">
                                        <div class="btn-group text-white">
                                            <a type="button" class="dropdown-toggle text-decoration-none nav-link" data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="mr-1 user-name text-bold-700">John Doe</span>
                                                @* <img src="~/app-assets/images/portrait/small/avatar-s-19.png" alt="avatar"> *@
                                            </a>
                                            <ul class="dropdown-menu">
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-user"></i>
                                                        Profile
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <i class="fa-regular fa-bell"></i>
                                                        Notification
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <i class="fa-solid fa-book"></i>
                                                        Library
                                                    </a>
                                                </li>
                                                <div class="dropdown-divider"></div>
                                                <li>
                                                    <a class="dropdown-item" href="~/Identity/Account/Logout">
                                                        <i class="fa-solid fa-gear"></i>
                                                        Setting
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="~/Identity/Account/Logout">
                                                        <i class="fa-solid fa-arrow-right-from-bracket"></i>
                                                        Logout
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link" href="~/Identity/Account/Login">
                                            <i class="fa-solid fa-user"></i>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="main_content">
        @RenderBody()
    </main>
    <footer>
        <div class="container text-center">
            <div class="d-flex">
                <div class="col">
                    <div class="widget_container">
                        <div class="widget_brand">
                            <div class="animated_brand">
                                <div class="word">
                                    <img src="~/assets/img/logo.png" alt="" />
                                </div>
                                <div class="word">R</div>
                                <div class="word">a</div>
                                <div class="word">W</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col list_social d-flex">
                    <img src="~/assets/img/facebook_icon.png" alt="" />
                    <img src="~/assets/img/X_icon.png" alt="" />
                    <img src="~/assets/img/instagram_icon.png" alt="" />
                </div>
                <div class="col copyright">
                    <small>Copyright &copy; 2024 Read and Write</small>
                </div>
            </div>
        </div>
    </footer>
    <a href="#" class="back_to_top" id="backToTop">
        <i class="fa-solid fa-circle-arrow-up"></i>
        <!-- <span>Back To Top</span> -->
    </a>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Link javascript -->
    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

