@model List<RaWMVC.Areas.Identity.Data.RaWMVCRole>

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-content collapse show">
				<div class="table-responsive">
					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Name</th>
								<th scope="col">Descripiton</th>
								<th scope="col">Action</th>
							</tr>
						</thead>
						<tbody>
							@if (Model != null && Model.Any())
							{
								foreach (var role in Model)
								{
									<tr>
										<td>@role.Name</td>
										<td>@role.Description</td>
										<td>
											<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@role.Id">
												<i class="fa-solid fa-file-pen"></i> Edit
											</a>
											<a class="btn btn-outline-danger" onclick="deleteRole('@role.Id')">
												<i class="fa-solid fa-eraser"></i> Delete
											</a>
										</td>
									</tr>
								}
							}
							else
							{
								<tr>
									<td colspan="2" class="text-center">No roles found.</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

				<!-- Pagination (Optional - Uncomment when pagination is ready) -->
