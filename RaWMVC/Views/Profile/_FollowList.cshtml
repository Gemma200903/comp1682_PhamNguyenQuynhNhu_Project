@model IEnumerable<RaWMVC.ViewModels.FollowViewModel>

<div class="following_container d-flex flex-wrap">
    @if (Model != null && Model.Any())
    {
        foreach (var follower in Model)
        {
            <div class="following_item d-flex mt-4 w-25">
                <img src="@Url.Content(follower.ProfilePicture)" alt="Avatar" class="rounded-circle" style="width: 50px; height: 50px;" />
                <div class="following_infor ms-3">
                    <p class="fw-bolder fs-5">@follower.Username</p>
                    <span>@follower.Username</span>
                </div>
            </div>
        }
    }
    else
    {
        <p>No followers yet.</p>
    }
</div>
