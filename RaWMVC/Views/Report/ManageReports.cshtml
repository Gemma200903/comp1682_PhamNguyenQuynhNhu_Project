@model IEnumerable<RaWMVC.Data.Entities.Report>

@{
    ViewData["Title"] = "ManageReports";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="text-center fw-bold">Manage Reports</h3>
<hr />

<div class="table-responsive">
    <table class="table mb-0">
        <thead class="bg-yellow bg-lighten-4">
            <tr>
                <th width="20%">Story</th>
                <th width="10%">Reported By</th>
                <th width="20%">Reason</th>
                <th width="35%">Description</th>
                <th width="15%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>
                        <strong>@report.Story.StoryTitle</strong><br>
                        <small class="text-muted">by @report.AuthorName</small>
                    </td>
                    <td>@report.Username</td>
                    <td>@report.Reason</td>
                    <td>@report.Description</td>
                    <td>
                        <form asp-action="ApproveReport" method="post" class="d-inline">
                            <input type="hidden" name="reportId" value="@report.ReportId" />
                            <button type="submit" class="btn btn-success btn-sm me-2">Approve</button>
                        </form>
                        <form asp-action="RejectReport" method="post" class="d-inline">
                            <input type="hidden" name="reportId" value="@report.ReportId" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
