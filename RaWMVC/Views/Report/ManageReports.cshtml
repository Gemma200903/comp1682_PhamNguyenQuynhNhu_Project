@model IEnumerable<RaWMVC.Data.Entities.Report>

@{
    ViewData["Title"] = "ManageReports";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="mb-4">Manage Reports</h2>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark text-white">
            <tr>
                <th scope="col">Story</th>
                <th scope="col">Reported By</th>
                <th scope="col">Reason</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>
                        <strong>@report.Story.StoryTitle</strong><br>
                        <small class="text-muted">by @report.AuthorName</small>
                    </td>
                    <td>@report.Username</td>
                    <td>@report.Reason</td>
                    <td>
                        <form asp-action="ApproveReport" method="post" class="d-inline">
                            <input type="hidden" name="reportId" value="@report.ReportId" />
                            <button type="submit" class="btn btn-success btn-sm me-2">Approve</button>
                        </form>
                        <form asp-action="RejectReport" method="post" class="d-inline">
                            <input type="hidden" name="reportId" value="@report.ReportId" />
                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
